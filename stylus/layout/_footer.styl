.footer
    &--sites
        &__goUp
            display: flex
            flex-direction: column
            align-items: center
            color: $light-color
            background-color: lighten($brand-color, 17%)
            height 50px
            text-transform: uppercase
            span 
                font-size: 11px
        &__container
            display: grid
            grid-template-columns: 50% 50%
            height: auto
            background-color: $brand-color
            padding-bottom: 20px
            a
                color: $light-color
            ul
                li
                    display: flex
                    align-items: center
                    justify-content: start
                    width: 100%
                    height: 42px
                    padding-left: 20px
                    font-weight: $weight-importantText
        &__left, &__right
            height: auto
    &--account
        background-color: $dark-color 
        color: $light-color
        padding: 20px
        &__login
            display: flex
            justify-content: center
            margin-bottom: 20px
            font-weight: $weight-importantText
        &__conditionsAndTerms 
            width: 100%
            li 
                display: inline-block
                text-align: center
                height: 20px
                margin-right: 20px
                a
                    color: $light-color
                    font-size: $font-small