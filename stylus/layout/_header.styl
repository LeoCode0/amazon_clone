.headerContainer
    display: grid

.headerContainer
    height 40px
    display: grid
    grid-template-columns: repeat(11, 1fr)
    border-bottom: 3px solid #57616c

.header
    height: auto
    background-color: brand-color
    &--menu
        iconProperties(1, 3, 6px, 10px)
    &--logo
        grid-column-start: 3
        grid-column-end: 9
        padding-top: 8px
        img
            width: 100%
            height: 100%
    &--user
        iconProperties(9, 10, 6px, 0)
    &--checkout
        iconProperties(10, 11, 6px, 0)
        margin-left: 20px
    &--search
        width: 100%
        padding: 0 10px
        & input[type=text]
            height: 50px
            width: 80%
        & input[type=button]
            position: absolute
            width: 17%
            height: 50px
            background-color: #fcbb6a
            border: 0