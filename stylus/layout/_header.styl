.headerContainer
    display: grid

.headerContainer
    height 40px
    display: grid
    grid-template-columns: repeat(11, 1fr)
    border-bottom: 3px solid #57616c

.header
    height: auto
    background-color: $brand-color
    &--menu
        iconProperties(1, 3, 6px, 10px)
    &--logo
        grid-column-start: 3
        grid-column-end: 9
        padding-top: 8px
        img
            width: 80px
            height: 24px
    &--user
        iconProperties(9, 10, 6px, 0)
    &--checkout
        iconProperties(10, 11, 6px, 0)
        margin-left: 20px
    &--search
        width: 100%
        padding: 0 10px
        & input[type=text]
            width: 80%
            padding-left: 10px
            font-size: 14px
            searchProperties()
        & input[type=button]
            position: absolute
            width: 17%
            height: 46px
            background-color: #fcbb6a
            buttonProperties()
