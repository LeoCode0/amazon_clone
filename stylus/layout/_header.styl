.headerContainer
    display: grid

.headerContainer
    height 40px
    display: grid
    grid-template-columns: repeat(11, 1fr)
    border-bottom: 3px solid #57616c

.desktop
    padding-top: 10px
    width: 100vw
    height: 40px
    display: flex
    justify-content: space-around
    border-bottom: 1px solid $brand-color-lighten
    a
        color: $light-color
        &:hover
            color: $brand-color-light
            text-decoration: underline
    i
        color: $light-color
        font-size: 20px
        &:hover
            color: $brand-color-light
            cursor pointer

.header
    height: auto
    background-color: $brand-color
    &--menu
        iconProperties(1, 3, 6px, 10px)
    &--logo
        grid-column-start: 3
        grid-column-end: 9
        padding-top: 8px
        img
            width: 80px
            height: 24px
    &--user
        iconProperties(9, 10, 6px, 0)
    &--checkout
        iconProperties(10, 11, 6px, 0)
        margin-left: 20px
    &--search
        width: 100%
        padding: 0 10px
        & input[type=text]
            width: 80%
            padding-left: 10px
            font-size: 14px
            searchProperties()
        & input[type=button]
            position: absolute
            width: 17%
            height: 46px
            background-color: #fcbb6a
            buttonProperties()
    &--ubication
        background-color: $brand-color-lighten
        color: $light-color
        height: 40px
        display: flex
        align-items: center
        margin-bottom: 10px
        i
            padding: 0 10px
            font-size: $title-medium
        &__span
            font-weight: $weight-importantText