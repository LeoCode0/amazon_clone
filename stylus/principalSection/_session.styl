.session
    borderSeparate()
    padding: 0 $lateral-spacing
    &--information
        height: 60px
        &__title
            font-weight: 400
            font-size: 20px
    &--login
        background-color: $brand-color-light
        height: 50px
        margin-bottom: 18px
        &__button
            display: flex
            justify-content: center
            align-items: center
            width: 100%
            height: 100%
            color: black
    &--create
        width: 100%
        height: 30px
        display: flex
        justify-content: space-between
        &__anchor
            color: $color-anchors
        i
            opacity: 0.5    
