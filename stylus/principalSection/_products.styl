.products
    &--offer
        borderSeparate()
        padding: 10px $lateral-spacing 0 $lateral-spacing
        &__img
            object-fit: cover
            width: 100%
            height: 230px
        &__information, &__price
            overflow: hidden
            text-overflow: ellipsis
            white-space nowrap
            font-size: 15px
            color: lighten(black, 25%)
            margin: $lateral-spacing 0
        &__moreOffers
            display: flex
            justify-content: space-between
            border-top: 1px solid lighten(black, 90%)
            margin: 16px 0
            padding-top: 10px
            i 
                opacity: 0.5
            a
                color: $color-anchors
    &--container
        padding: $lateral-spacing
        &__title
            font-weight: $weight-normalText
            font-size: $title-medium = 20px
            margin-bottom: $lateral-spacing
    &--grid
        display: grid
        grid-template: 50% 50% / 50% 50%
    &--important
        borderSeparate()
        &__title
            padding: 10px $lateral-spacing 0 $lateral-spacing
            font-weight: $weight-normalText
        &__img
            display: flex
            justify-content: center
            margin: 4%
            img
                object-fit: cover
                width: 100%
                height: 400px