.header
    background-color: darken($brand-color, 40%)
    padding: $lateral-spacing
    display: grid
    grid-template-columns: repeat(24, 4.1075vw)
    grid-template-rows: 50px
    &--menu
        grid-column: 1 / 2
        height: 50px
        min-width 50px
        display: flex
        justify-content: center
        i
            border-radius: 3px
            border: 1px solid $brand-color-lighten
            color: white
            display: flex
            justify-content: center
            align-content: center
            padding-top: 10px
            font-size: 24px
            height 90%
            width: 70%
            &:hover
                cursor: pointer
                border: 1px solid $light-color
    &--logo
        grid-column: 2 / 4
        border: 1px solid darken($brand-color, 40%)
        height: 100%
        min-width 116px
        img
            width: 100%
            height 100%
        &:hover
            border: 1px solid $light-color
    &--form
        grid-column: 5 / 18
        display: flex
        align-items: center
        margin: 0 $lateral-spacing
        &__span
            background-color: $light-color
            border-radius: 5px 0 0 5px
            width: 20%
            height: $input-height
            display: flex
            align-items: center
            justify-content: space-evenly
            border-right: 1px solid lightness(black, 80%)
            span
                font-size: 12px
            i
                transform: rotate(180deg)
        &__input
            width: 74%
            max-width: 600px
            height: $input-height
            padding: 0 $lateral-spacing
            font-size: 16px
            border: 0
            outline: none
        &__button
            width: 6%
            height: $input-height
            border: 0
            border-radius: 0 5px 5px 0
            background-color: $brand-color-light
            &:hover
                background-color: lighten($brand-color-light, 20%)
               cursor pointer 
    &--personal
        padding-top: 5px
        font-size: 13px
        padding-left: $lateral-spacing
        border: 1px solid darken($brand-color, 40%)
        &__lightFont
            color: darken($light-color, 15%)
        &#first
            grid-column: 18 / 20
        &#second
            padding-left: ($lateral-spacing * 2)
            grid-column: 20 / 22
        &#third
            grid-column: 22 / 23
        &.shopping
            grid-column: 23 / 25
            display: flex
            align-items: center
            i
                margin-right: 10px
                font-size: 30px
                transform: rotate(0deg)
            span
                margin-top: 10px
                font-size: 16px
        :last-child
            font-weight: $weight-importantText
            color: $light-color                
        i
            color: darken($light-color, 15%)
            transform: rotate(180deg)
        &:hover
            border: 1px solid white
            cursor: pointer


