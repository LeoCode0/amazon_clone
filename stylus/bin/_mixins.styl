iconProperties(start, end, ptop=0, pleft)
    grid-column-start: start
    grid-column-end: end
    padding: ptop 0 0 pleft
    i
        font-size: 24px
        color: $light-color
        &:hover
            cursor pointer

searchProperties()
    height: 46px
    border: 0
    border-top-left-radius: $size-radius
    border-bottom-left-radius: $size-radius

buttonProperties()
    height: 46px
    border: 0
    border-top-right-radius: $size-radius
    border-bottom-right-radius: $size-radius

borderSeparate()
    border-top: 5px solid lighten(gray, 50%)
    border-bottom: 5px solid lighten(gray, 50%)